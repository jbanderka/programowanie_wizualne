        <Label Content="Tekst do hashowania:" HorizontalAlignment="Left" Margin="170,33,0,0" VerticalAlignment="Top"/>
        <Label Content="Zahashowany tekst:" HorizontalAlignment="Left" Margin="170,253,0,0" VerticalAlignment="Top"/>
        <TextBox Name="key" HorizontalAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Width="100" Height="42" BorderBrush="Black"/>
        <Label Content="Klucz szyfrujący:" HorizontalAlignment="Left" Margin="350,170,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
