<Window x:Class="lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView Name="listV" Margin="240,44,240,70" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="NAME" DisplayMemberBinding="{Binding Name}" Width="110"/>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="80"/>
                    <GridViewColumn Header="COUNT" DisplayMemberBinding="{Binding Count}" Width="110"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="add" Content="ADD" HorizontalAlignment="Left" Margin="605,104,0,0" VerticalAlignment="Top" Height="40" Width="65" Click="add_Click"/>
        <Button Name="save" Content="ZAPIS DO CSV" HorizontalAlignment="Left" Margin="290,384,0,0" VerticalAlignment="Top" Height="25" Width="90" Click="save_Click"/>
        <Button Name="read" Content="ODCZYT Z CSV" HorizontalAlignment="Left" Margin="420,384,0,0" VerticalAlignment="Top" Height="25" Width="90" Click="read_Click"/>
    </Grid>
</Window>
